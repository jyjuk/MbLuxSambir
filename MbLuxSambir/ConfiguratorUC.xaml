<UserControl x:Class="MbLuxSambir.ConfiguratorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MbLuxSambir"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="220">
    <Grid Margin="10,2">
        <Label x:Name="label" Content="{Binding Path=Name}"  Width="180" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26"/>
        <TextBox x:Name="textbox" Text="{Binding Path=Price,Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="25" Width="45" />
    </Grid>
</UserControl>
